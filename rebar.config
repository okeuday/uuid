{lib_dirs, ["deps"]}.
{erl_opts, [warnings_as_errors,
            strict_validation,
            warn_bif_clash,
            warn_deprecated_function,
            warn_export_all,
            warn_export_vars,
            warn_exported_vars,
            warn_obsolete_guard,
            warn_shadow_vars,
            warn_unused_import,
            warn_unused_function,
            warn_unused_record,
            warn_unused_vars]}.
{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.
{cover_print_enabled, true}.
{cover_export_enabled, true}.

{deps,
 [{quickrand, ".*",
   {git, "https://github.com/okeuday/quickrand.git",
    {tag, "v1.3.3"}}}]}.
